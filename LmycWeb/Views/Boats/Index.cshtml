@model IEnumerable<LmycWeb.Models.Boat>

@{
    ViewData["Title"] = "Boats";
}

<h2>Boats</h2>

@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BoatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LengthInFeet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Make)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecordCreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BoatName)
                </td>
                <td>
                    <img src="@Url.Content(item.Picture)" height="54" width="54" alt="Image" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LengthInFeet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Make)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecordCreationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.FullName)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        @:@Html.ActionLink("Edit", "Edit", new { id = item.BoatId }) |
                    }
                    @Html.ActionLink("Details", "Details", new { id = item.BoatId })
                    @if (User.IsInRole("Admin"))
                    {
                        @: | @Html.ActionLink("Delete", "Delete", new { id = item.BoatId })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
